- @meta_title = "Bilder von vergangenen ANKKB Events"
- @meta_description = "Wir empfehlen folgende Veranstaltungen in und um Hergershausen."

%h1= @meta_title

%ul#images{ :data => { :collection => "albums" } }
  - albums.each do |album|
    %li
      %a.img_wrap{ :href => url("/albums/#{album.id}/#{album.name.parameterize}"), :title => album.description }
        %div.cover{ :style => "background-image: url(#{album.cover})" }
      %a.title{ :href => url("/albums/#{album.id}/photos"), :title => album.description }
        = album.name


